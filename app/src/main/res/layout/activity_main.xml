<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Chronometer
        android:id="@+id/kronometre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_Start_Pause"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kronometre"
        app:srcCompat="@drawable/start02" />

    <ImageView
        android:id="@+id/iv_Reset"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_Start_Pause"
        app:layout_constraintTop_toBottomOf="@+id/iv_Start_Pause"
        app:srcCompat="@drawable/start02" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Start_Pause"
        app:layout_constraintEnd_toEndOf="@+id/iv_Start_Pause"
        app:layout_constraintStart_toStartOf="@+id/iv_Start_Pause"
        app:layout_constraintTop_toTopOf="@+id/iv_Start_Pause" />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Start_Pause"
        app:layout_constraintEnd_toEndOf="@+id/iv_Start_Pause"
        app:layout_constraintStart_toStartOf="@+id/iv_Start_Pause"
        app:layout_constraintTop_toTopOf="@+id/iv_Start_Pause" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:text="Reset"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Reset"
        app:layout_constraintEnd_toEndOf="@+id/iv_Reset"
        app:layout_constraintStart_toStartOf="@+id/iv_Reset"
        app:layout_constraintTop_toTopOf="@+id/iv_Reset" />

</androidx.constraintlayout.widget.ConstraintLayout>



